<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.Views.NewPage1"
             Title="NewPage1">
    <VerticalStackLayout>
        <Label 
            Text="Loading page"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button Text="Next" Command="{Binding NextButtonPressedCommand}" Margin="10" />



        <Button Text="Scenario 2" Command="{Binding Scenario2ButtonPressedCommand}"  Margin="10"/>
        <Button Text="Image Error" Command="{Binding ImageErrorButtonPressedCommand}" Margin="10" />
        <Button Text="Scroll View Problem" Command="{Binding ScrollViewProblemButtonPressedCommand}" Margin="10" />
        <Button Text="Image In List Problem" Command="{Binding ImageInListButtonPressedCommand}" Margin="10" />
    </VerticalStackLayout>
</ContentPage>