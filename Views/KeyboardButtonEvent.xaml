            Text="Page 2"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button Text="Next" Command="{Binding NextButtonPressedCommand}" />
        <Entry Text="{Binding TestText}" />
    </VerticalStackLayout>-->
</ContentPage>